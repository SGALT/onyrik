<div class="container">

  <!-- Events Caroussel -->
  <div id="carouselExampleIndicators" class="carousel slide mb-3" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag("testcar.jpg", alt: "First slide", class: "d-block w-100") %>
      </div>
      <div class="carousel-item">
        <%= image_tag("testcar.jpg", alt: "Second slide", class: "d-block w-100") %>
      </div>
      <div class="carousel-item">
        <%= image_tag("testcar.jpg", alt: "Third slide", class: "d-block w-100") %>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <!-- Onyrik description / Social Network Flow</p> -->
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="card mb-3 bg-dark rounded">
        <%= image_tag("logotransparent.png", alt: "Card image cap", class: "card-img-top mx-auto", style: "max-height: 200px; max-width: 200px;") %>
        <div class="card-body">
          <p class="card-text">
            Bar ambiance ludique, geek et chic.
          </p>
          <p class="card-text">
            Une taverne médiévale, un vaisseau spatial, une ludothèque et des soirées à thèmes n'attendent que vous !
          </p>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="card mb-3 bg-dark rounded">
        <div id="map" style="width: 100%; height: 300px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>


  <!-- Partenaires -->
  <div class="partners">
    <h3>
      LES PARTENAIRES ONYRIK
    </h3>
    <p class="line"></p>
    <ul class="logos-list">
      <li class="logos-list__item">
        <%= image_tag("gasconha.png", class: "logos-list__image", alt: "logo", width: "100") %>
      </li>
      <li class="logos-list__item">
        <%= image_tag("kforge.png", class: "logos-list__image", alt: "logo", width: "100") %>
      </li>
      <li class="logos-list__item">
        <%= image_tag("jocus.png", class: "logos-list__image", alt: "logo", width: "100") %>
      </li>
    </ul>
    <p class="line_full"></p>
  </div>


  <!-- Footer -->



</div>
