<div class="container-fluid">
  <%= simple_form_for @event do |f| %>
    <%= @event.errors.full_messages.join(', ') %>
    <%= f.input :title, label: 'Titre' %>
    <%= f.input :content, label: 'Description' %>
    <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :hour, label: 'Heure (A partir de...)' %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit, class: 'btn btn-danger btn-block' %>
  <% end %>
  <%= link_to "Accueil", root_path, class: 'btn btn-dark btn-block mt-1' %>
</div>
