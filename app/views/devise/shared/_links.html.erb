<%- if controller_name != 'sessions' %>
  <%= link_to "Se connecter", new_session_path(resource_name), class: "btn btn-dark mt-1" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "S'inscrire", new_registration_path(resource_name), class: "btn btn-dark mt-1" %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Oubli du mot de passe ?", new_password_path(resource_name), class: "btn btn-dark mt-1" %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Vous n'avez pas reçu de confirmation ?", new_confirmation_path(resource_name), class: "btn btn-dark mt-1" %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Vous n'avez reçu aucune instruction pour débloquer votre compte ?", new_unlock_path(resource_name), class: "btn btn-dark mt-1" %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-dark mt-1" %><br />
  <% end -%>
<% end -%>
